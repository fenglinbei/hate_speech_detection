    "max_retries": 50,
    "concurrency": 1,
    "compute_metric": true,
    "prompt_templates": {
      "system": "",
      "train": "RAG_PROMPT_USER_V1",
      "shot": ""
    },
    "run": {
      "shots_list": [0],
      "llm_params": {
         "max_new_tokens": 512, 
         "n": 1,
         "top_p": 0.8,
         "top_k": 20,
         "min_p": 0,
         "temperature": 0.5, 
         "enable_thinking": false
        }
    }
  }
