{
  "output_name": "qwen2-7b-intrtuct-rag-3.json",
  "log": {
    "level": "DEBUG",
    "show_console": true
  },
  "model": {
    "type": "ApiLLMModel",
    "params": {
      "model_name": "default",
      "api_base": "http://127.0.0.1:35000/v1/",
      "api_key": "EMPTY",
      "temperature": 0.7, 
      "top_p": 0.8
    }
  },
  "retriever": {
    "type": "Retriever",
    "params": {
        "model_path": "./models/bge-large-zh-v1.5",
